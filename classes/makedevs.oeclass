# -*- mode:python; -*-

require conf/makedevs.conf

do_install[postfuncs] += "do_install_makedevs"
do_install_makedevs () {
	if [ -z "${MAKEDEVS_FILES}" ]; then
		return
	fi
	install -m 0755 -d ${D}${devtabledir}
	i=1
	for f in ${MAKEDEVS_FILES} ; do
		install -m 0644 $f ${D}${devtabledir}/${PN}.$i
		i=$((i+1))
	done
}
